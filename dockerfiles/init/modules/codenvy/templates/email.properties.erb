# Configuration of sending email notifications for users
workspace.email.created.enabled=true
workspace.email.added.member.enabled=true
workspace.email.removed.member.enabled=true

# sender email address
mailsender.application.from.email.address=<%= scope.lookupvar('codenvy::email_from') %>

# Configuration of teams email notifications
team.email.member.added.subject=You’ve been added to a Codenvy team
team.email.member.removed.subject=You’ve been removed from a Codenvy team
team.email.renamed.subject=Codenvy Team renamed
team.email.removed.subject=Codenvy Team deleted
